@model TestingApp.Models.TestAppRecord

@{
    ViewData["Title"] = "Create";
}

<h1>Add Record</h1>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Issue_Number" class="control-label"></label>
            <input asp-for="Issue_Number" class="form-control" min="1" />
            <span asp-validation-for="Issue_Number" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Client_Name" class="control-label"></label>
            <input asp-for="Client_Name" class="form-control" />
            <span asp-validation-for="Client_Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Assigned_Developer" class="control-label"></label>
            <input asp-for="Assigned_Developer" class="form-control" />
            <span asp-validation-for="Assigned_Developer" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Assigned_Tester" class="control-label"></label>
            <input asp-for="Assigned_Tester" class="form-control" />
            <span asp-validation-for="Assigned_Tester" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Cycle_Count" class="control-label"></label>
            <input asp-for="Cycle_Count" class="form-control" />
            <span asp-validation-for="Cycle_Count" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Date_Per_Cycle_Count" class="control-label"></label>
            <input asp-for="Date_Per_Cycle_Count" class="form-control" />
            <span asp-validation-for="Date_Per_Cycle_Count" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Release_Date" class="control-label"></label>
            <input asp-for="Release_Date" class="form-control" />
            <span asp-validation-for="Release_Date" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Issue_Type" class="control-label"></label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Issue_Type" value="0">
                <label class="form-check-label">Buggs</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Issue_Type" value="1">
                <label class="form-check-label">Enhancement</label>
            </div>
            <br>
            <span asp-validation-for="Issue_Type" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label class="control-label">Status</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Status" value="0">
                <label class="form-check-label">Failed</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Status" value="1">
                <label class="form-check-label">Passed</label>
            </div>
            <br>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-dark" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
